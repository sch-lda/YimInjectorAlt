<UserControl
    x:Class="GTA5Menu.Views.SpawnVehicle.MyVehicleView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dd="urn:gong-wpf-dragdrop"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="700"
    d:DesignWidth="1260"
    mc:Ignorable="d">

    <!--  载具详细信息  -->
    <ListBox
        x:Name="ListBox_Vehicles"
        Margin="5"
        dd:DragDrop.IsDragSource="True"
        dd:DragDrop.IsDropTarget="True"
        dd:DragDrop.UseDefaultDragAdorner="True"
        ItemsSource="{Binding MyFavorites}"
        MouseDoubleClick="ListBox_Vehicles_MouseDoubleClick"
        Style="{StaticResource ListBoxStyle_VehiclePreview2}"
        ToolTip="双击选中项可快捷刷出，按鼠标右键弹出菜单，按住鼠标左键可拖拽排序">
        <dd:DragDrop.DropTargetAdornerPen>
            <Pen
                Brush="DodgerBlue"
                DashCap="Round"
                Thickness="4" />
        </dd:DragDrop.DropTargetAdornerPen>
        <ListBox.ItemTemplate>
            <DataTemplate DataType="{x:Type ListBoxItem}">
                <DockPanel ToolTip="{Binding Name}">
                    <TextBlock
                        Margin="10,3,5,5"
                        DockPanel.Dock="Bottom"
                        Text="{Binding Value}" />
                    <TextBlock
                        Margin="10,0,5,0"
                        DockPanel.Dock="Bottom"
                        FontSize="14"
                        FontWeight="Bold"
                        Text="{Binding Name}" />
                    <Image
                        Margin="5"
                        DockPanel.Dock="Top"
                        Source="{Binding Image, Converter={StaticResource StringToImageSourceConverter}}"
                        Style="{StaticResource ImageStyle_HighQuality}" />
                </DockPanel>
            </DataTemplate>
        </ListBox.ItemTemplate>
        <ListBox.ContextMenu>
            <ContextMenu>
                <MenuItem
                    x:Name="MenuItem_SpawnVehicleA"
                    Click="MenuItem_SpawnVehicleA_Click"
                    Header="刷出线上载具（空地）" />
                <MenuItem
                    x:Name="MenuItem_SpawnVehicleB"
                    Click="MenuItem_SpawnVehicleB_Click"
                    Header="刷出线上载具（室内）" />
                <Separator />
                <MenuItem
                    x:Name="MenuItem_DeleteMyFavorite"
                    Click="MenuItem_DeleteMyFavorite_Click"
                    Header="从我的收藏删除" />
            </ContextMenu>
        </ListBox.ContextMenu>
    </ListBox>

</UserControl>
