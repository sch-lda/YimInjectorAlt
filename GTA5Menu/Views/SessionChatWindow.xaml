<ui:Window
    x:Class="GTA5Menu.Views.SessionChatWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://crazyzhang.cn/ui/2023/xaml"
    x:Name="Window_SessionChat"
    Title="GTA5线上小助手-仅测试 - 战局快捷聊天"
    Width="900"
    Height="600"

    ResizeMode="CanMinimize"
    Style="{StaticResource SystemWindowStyle}"
    mc:Ignorable="d">

    <ui:Window.TitleContent>
        <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
            <Image
                Height="20"
                Margin="5"
                Source="/Assets/Favicon.ico"
                Style="{StaticResource ImageStyle_HighQuality}" />
            <TextBlock
                VerticalAlignment="Center"
                FontSize="14"
                FontWeight="Bold"
                Text="{Binding ElementName=Window_SessionChat, Path=Title}" />
        </StackPanel>
    </ui:Window.TitleContent>

    <UniformGrid Columns="2">
        <!--  面板1  -->
        <!--  面板2  -->
        <!--  面板3  -->

    </UniformGrid>

</ui:Window>
